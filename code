import random
import string


def generate_password(min_lengh, numbers=True, special_char=True):
    letters = string.ascii_letters
    digits = string.digits
    special = string.punctuation

    characters = letters
    if numbers:
        characters += digits
    if special_char:  #Checks if the user wants 
         characters += special #special or numbers amd adds

    pwd = ""
    meets_requiarments = False
    has_number = False
    has_special = False

    while not meets_requiarments or len(pwd) < min_lengh:
        new_char = random.choice(characters)
        pwd += new_char

        if new_char in digits:
            has_number = True
        elif new_char in special:
            has_special = True

        meets_requiarments = True
        if numbers:
            meets_requiarments = has_number
        if special_char:
            meets_requiarments = meets_requiarments and has_special
    return pwd
        

print(generate_password(10))
