import random
import string
allowed_num = False
allowed_spec = False

def generate_password(min_lengh, numbers=True, special_char=True):
    letters = string.ascii_letters
    digits = string.digits
    special = string.punctuation

    characters = letters
    if numbers:
        characters += digits
    if special_char:  #Checks if the user wants 
         characters += special #special or numbers amd adds

    pwd = ""
    meets_requiarments = False
    has_number = False
    has_special = False

    while not meets_requiarments or len(pwd) < min_lengh:
        new_char = random.choice(characters)
        pwd += new_char

        if new_char in digits:
            has_number = True
        elif new_char in special:
            has_special = True

        meets_requiarments = True
        if numbers:
            meets_requiarments = has_number
        if special_char:
            meets_requiarments = meets_requiarments and has_special
    print(pwd)
    return pwd
        
print("WElcome to a basic pass gen!")
while True:
    let = input("Whats the min lenth: ")
    try:
        int(let)
    except:
        print("Coundlt read the number!")
    num = input("do u want numbers in it (y/n): ")
    spec = input("do u want specials in it (y/n): ")
    break
if num == "y".lower():
    allowed_num = True

if spec == "y".lower():
    allowed_spec = True

generate_password(int(let), allowed_num, allowed_spec)

